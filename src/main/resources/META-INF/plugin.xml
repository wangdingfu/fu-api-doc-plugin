        <!-- 魔法棒格式化json动作  -->
        <group id="fu.doc.editor.format">
            <action id="fu.doc.format" class="com.wdf.fudoc.test.action.editor.FuEditorFormatAction"/>
        </group>
    </actions>

</idea-plugin>